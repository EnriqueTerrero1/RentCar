@{
}

<div class="modal fade" id="SelectEmployeestaticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="staticBackdropLabel">Add Vehicule Model</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          
      </div>
      <form>
      <div class="modal-body">
     <Label>Add Rent and return</Label>
      
  <div class="form-group">
    <label for="exampleFormControlInput1">Description: </label>
    <input type="text" class="form-control" asp-for="description">
     <label for="exampleFormControlInput1">Chasis number </label>
    <input type="text" class="form-control" asp-for="chasisNumber">
    <label for="exampleFormControlInput1">Motor number </label>
    <input type="text" class="form-control" asp-for="motorNumber">
    <label for="exampleFormControlInput1">Plate number </label>
    <input type="text" class="form-control" asp-for="plateNumber">

    <label asp-for="Employee">Employee</label>
    <input type="button" class="form-control" asp-for="Employee" data-bs-target="#AddEmployeestaticBackdrop" />
    <!-- <select class="form-control" asp-for="employee">
   foreach (var employee in Model.employees)
          {
              <option>employee.Name</option>
           }
      </select>-->
      <label asp-for="brand">Brand</label>
      <select class="form-control" asp-for="brand">
       @foreach ( var brand in @Model.brands)
             {
               <option>@brand.description</option>
              }
      </select>
       <label asp-for="model">Model</label>
      <select class="form-control" asp-for="model">
       @foreach ( var vehiculeModel in @Model.vehiculeModels)
             {
               <option>@vehiculeModel.description</option>
              }
      </select>
       <label asp-for="fuel_type">Fuel type</label>
      <select class="form-control" asp-for="fuel_type">
       @foreach ( var fuel_type in @Model.fuel_Types)
             {
              <option>@fuel_type.description</option>
              }
      </select>
  </div>
  <div class="form-group">
    <label hidden="hidden" asp-for= "id"></label>
    <label asp-for = "status">Status</label>
    <select class="form-control" asp-for="status">
  <option value= "True" >In Stock</option>
  <option value= "False">Out of Stock</option>
</select>
      </div>
      
                    
       
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button type="submit" class="btn btn-primary"  asp-action="Create" >Add</button>
        
      </div>
     
    </div>
    </form>
  </div>
</div>
</div>


