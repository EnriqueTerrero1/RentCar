@model RentCarModelView
    

@{
}

<!-- Modal -->
<div class="modal fade" id="UpdatestaticBackdrop1" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="staticBackdropLabel">Modal title</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
     <Label>Vehicule Type To Update</Label>
          <form method="post" action="/vehicule">
   <select class="form-control" asp-for="id" >
      
   @foreach ( Vehicule vehicule in @Model.vehicules)
       {
          
       <option value="@vehicule.id"> @vehicule.description</option>
       } 
      
   </select>

  <div class="form-group">
    <label for="exampleFormControlInput1">Description: </label>
    <input type="text" class="form-control" asp-for="description" value="@Model.description">
     
     <label for="exampleFormControlInput1"  >Chasis number </label>
    <input type="text" class="form-control" asp-for="chasisNumber">
      
    <label for="exampleFormControlInput1" >Motor number </label>
    <input type="text" class="form-control" asp-for="motorNumber">
    
    <label for="exampleFormControlInput1"  >Plate number </label>
    <input type="text" class="form-control" asp-for="plateNumber" value="@Model.plateNumber">
     
    <label asp-for="vehicule_Type">Vehicule type</label>
    <select class="form-control" asp-for="vehicule_Type">
    @foreach (var vehicule_Type in @Model.vehicule_Types)
          {
              <option>@vehicule_Type.description</option>
           }
      </select>
      <label asp-for="brand">Brand</label>
      <select class="form-control" asp-for="brand">
       @foreach ( var brand in @Model.brands)
             {
               <option>@brand.description</option>
              }
      </select>
       <label asp-for="model">Model</label>
      <select class="form-control" asp-for="model">
       @foreach ( var vehiculeModel in @Model.vehiculeModels)
             {
               <option>@vehiculeModel.description</option>
              }
      </select>
       <label asp-for="fuel_type">Fuel type</label>
      <select class="form-control" id= "fuel_type" name ="fuel_type">
       @foreach ( var fuel_type in @Model.fuel_Types)
             {
              <option>@fuel_type.description</option>
              }
      </select>
      
      
  </div>
  <div class="form-group">
    <label hidden="hidden" asp-for= "id"></label>
    <label asp-for = "status">Status</label>
    <select class="form-control" asp-for="status">
  <option value= "True" >In Stock</option>
  <option value= "False">Out of Stock</option>
</select>
      </div>
        
     

                  
   
  
      
       
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button type="submit" class="btn btn-primary"   asp-action="update">Update</button>
        
      </div>
        </form>
    </div>
  </div>
</div>

</div>



