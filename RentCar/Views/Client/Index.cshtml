@model RentCar.Models.RentCarModelView

@{
     int i=1;
    int Contador() => i++;

    string InOrOutStock(bool status)
    {
        if (status == true)
        {
            return "In Stock";
        }
        else
        {
            return "Out of Stock";
        }
    }
}

<h1>Client</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Name</th>
      <th scope="col">Identification Card</th>
      <th scope="col">tarjetaCrNumber</th>
      <th scope="col">Credit Limit</th>
      <th scope="col">Person Kind</th>
      <th scope="col">Status</th>
      
    </tr>
  </thead>
  <tbody>
      
        @foreach ( var item in Model.clients)
        {
        <tr>
            
      <th scope="row">@Contador()</th>
      
      <td>@item.name</td>
       <td>@item.identificationCard</td>
        <td>@item.tarjetaCrNumber</td>
        <td>@item.creditLimit</td>
        <td>@item.PersonKind</td>
     
        <td>@InOrOutStock(@item.status)</td>
                
      
    </tr>
    
        }
        
  </tbody>
</table>
<button  type="button" class="btn btn-primary"  data-bs-toggle="modal" data-bs-target="#AddstaticBackdrop">Add client</button>
<!-- Button trigger modal -->
<button type="button" class="btn btn-primary"  data-bs-toggle="modal" data-bs-target="#DeletestaticBackdrop">
  Delete Fuel Type
</button>
<!--Button trigger Update Modal-->
<button type="button" class="btn btn-primary"  data-bs-toggle="modal" data-bs-target="#UpdatestaticBackdrop">
  Update Fuel Type
</button>


<partial name="_AddView"/>
<partial name="_DeleteView"/>
<partial name ="_UpdateView"/>



     






