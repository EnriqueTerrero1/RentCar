@model RentCar.Models.RentCarModelView

@{
    int i=1;
    int Contador() => i++;

    string InOrOutStock(bool status)
    {
        if (status == true)
        {
            return "In Stock";
        }
        else
        {
            return "Out of Stock";
        }
    }
}

<h1>Vehicule Type</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Description</th>
      
      <th scope="col">Status</th>
      
    </tr>
  </thead>
  <tbody>
      
        @foreach ( var item in Model.vehicule_Types)
        {
        <tr>
            
      <th scope="row">@Contador()</th>
      
      <td>@item.description</td>
   
         <td>@InOrOutStock(item.status)</td>
                
      
    </tr>
    
        }
        
  </tbody>
</table>
<form>
<button  type="submit" class="btn btn-primary"  asp-action="AddVehicule_TypeView">Add vehicule type</button>
<!-- Button trigger modal -->
<button type="button" class="btn btn-primary"  data-bs-toggle="modal" data-bs-target="#DeletestaticBackdrop">
  Delete vehicule type
</button>
<!--Button trigger Update Modal-->
<button type="button" class="btn btn-primary"  data-bs-toggle="modal" data-bs-target="#UpdatestaticBackdrop1">
  Update vehicule type
</button>
<!-- Modal -->
<div class="modal fade" id="DeletestaticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="DeletestaticBackdropLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="staticBackdropLabel">Delete Vehicule Type</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
          <form>
   <select class="form-control" asp-for="id" >

   @foreach ( Vehicule_Type vehicule_Type in @Model.vehicule_Types)
       {
          
        <option value="@vehicule_Type.id"> @vehicule_Type.description</option>
       }         
   </select>
   </form>
      </div>
       
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button type="submit" class="btn btn-primary"  asp-action="Delete">Delete</button>
        
      </div>
     
    </div>
  </div>
</div>


</form>

<form>

<!-- Button trigger modal -->

<!-- Modal -->
<div class="modal fade" id="UpdatestaticBackdrop1" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="staticBackdropLabel">Update Vehicule type</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
     <Label>Vehicule Type To Update</Label>
          <form>
   <select class="form-control" asp-for="id" >
      
   @foreach ( Vehicule_Type vehicule_Type in @Model.vehicule_Types)
       {
          
       <option value="@vehicule_Type.id"> @vehicule_Type.description</option>
       } 
      
   </select>
   
 
   </form>
   <div class="form-group">
    <label for="exampleFormControlInput1">Description: </label>
    <input type="text" class="form-control" asp-for="description"  >
  </div>
  <div class="form-group">
    <label asp-for = "status">Status</label>
    <select class="form-control" asp-for="status" >
    <option  value= "True" >In Stock</option>
    <option value= "False">Out of Stock</option>
    </select>

   
  
      </div>
       
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button type="submit" class="btn btn-primary"  asp-action="Update">Update</button>
        
      </div>
     
    </div>
  </div>
</div>


</form>


